<script type="text/javascript">
	function openChild(){
		var openWin;
        openWin = window.open("inquiry","", "width=600, height=475, resizable = no, scrollbars = no");
        openWin.focus();
	}
</script>

<div class="reviewModal">
	<div class="modalContent">
