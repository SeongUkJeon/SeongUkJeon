			        	if ( $( document ).scrollTop() > jbOffset.top ) {
			          		$( '.btfTab' ).addClass( 'jbFixed' );
			          	} else {
			            	$( '.btfTab' ).removeClass( 'jbFixed' );
			          	}
			        });
		      	});
		    	
		    	 function fnMove(seq){
		    	    var offset = $("#fn" + seq).offset();
		    	 	$('html, body').animate({scrollTop : offset.top}, 400);
		    	 }
