									 $(".numBox").val(num);
									} else {
									 $(".numBox").val(plusNum);          
									}
								});
								
								$(".minus").click(function(){
									var num = $(".numBox").val();
									var minusNum = Number(num) - 1;
									
									if(minusNum <= 0) {
									 $(".numBox").val(num);
									} else {
									 $(".numBox").val(minusNum);          
									}
								});
