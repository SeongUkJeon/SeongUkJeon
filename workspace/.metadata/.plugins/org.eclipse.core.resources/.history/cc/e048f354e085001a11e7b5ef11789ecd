					$(document).on("click", ".delete", function(){
						var deleteConfirm = confirm("정말로 삭제 하시겠습니까?");
					  
						if(deleteConfirm) {
							var data = {revnum : $(this).attr("data-revnum")};
							   
							$.ajax({
								url : "${cpath}/detail/deleteReview",
								type : "post",
								data : data,
								success : function(){								
