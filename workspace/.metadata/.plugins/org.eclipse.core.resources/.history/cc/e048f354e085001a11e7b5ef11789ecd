							<script>
								$("#revbtn").click(function(){  
									var formObj = $(".replyForm form[role='form']");
									var product_code = $("#product_code").val();
									var revcon = $("#revcon").val()
									var rating = $("#rating").val()
									  
									var data = {
										product_code : product_code,
										revcon : revcon,
										rating : rating
